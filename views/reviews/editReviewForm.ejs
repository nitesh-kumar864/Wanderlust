<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <h3 class="text-center mb-4">Edit Your Review</h3>

  <form
    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=PUT"
    method="POST"
    class="p-4 bg-white rounded-4 shadow-sm">

    <label class="fw-semibold mb-1">Rating</label>
    <fieldset class="starability-slot mb-3">
      <% for (let i = 1; i <= 5; i++) { %>
        <input
          type="radio"
          name="review[rating]"
          value="<%= i %>"
          <%= review.rating === i ? "checked" : "" %> />
      <% } %>
    </fieldset>

    <label class="fw-semibold mb-1">Comment</label>
    <textarea
      name="review[comment]"
      class="form-control mb-3"
      rows="4"
      required><%= review.comment %></textarea>

    <button class="btn btn-dark w-100 rounded-pill">
      Update Review
    </button>
  </form>
</div>
