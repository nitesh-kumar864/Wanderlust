<style>

   .navbar {
    background: #fff;
    padding: 0.8rem 1.5rem;
  }

  .navbar-brand i {
    font-size: 1.6rem;
    color: #fe424d;
  }

  .nav-link {
    font-weight: 500;
    color: #222;
    margin-right: 0.5rem;
  }

  .nav-link:hover {
    color: #fe424d;
  }

    /* Search */
  .search-form {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 30px;
    padding: 0.25rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  
  .search-input {
    border: none;
    outline: none;
    padding: 0.6rem 1.2rem;
    border-radius: 30px;
    width: 220px;
  }

    .search-input:focus {
    box-shadow: none;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.6rem 1.4rem;
    font-weight: 500;
    border: none;
  }

    .search-btn:hover {
    background-color: #e63946;
  }

  .search-btn i {
    margin-right: 0.4rem;
    font-size: 0.9rem;
  }
  
</style>
<nav class="navbar navbar-expand-md border-bottom sticky-top">
  <div class="container-fluid">

    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- Left -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Home</a>
      </div>

      <!-- Center Search -->
      <div class="mx-auto">
        <form class="d-flex align-items-center search-form"
              action="/listings/search"
              method="GET">
          <input
            class="form-control search-input"
            type="search"
            placeholder="Search  location"
            name="q"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
            Search
          </button>
        </form>
      </div>

      <!-- Right -->
      <div class="navbar-nav ms-auto align-items-center">
        <a class="nav-link" href="/listings/new">Add your home</a>

        <% if(!currUser) { %>
          <a class="nav-link fw-semibold" href="/signup">Sign up</a>
          <a class="nav-link fw-semibold" href="/login">Log in</a>
        <% } %>

        <% if(currUser) { %>
          <a class="nav-link fw-semibold" href="/logout">Log out</a>
        <% } %>
      </div>

    </div>
  </div>
</nav>
