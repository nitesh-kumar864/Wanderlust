<style>
  .listing-card {
    height: 100%;
    border-radius: 16px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .listing-img {
    width: 100%;
    height: 230px;        
    object-fit: cover;   
    border-bottom: 1px solid #eee;
  }

  .listing-body {
    flex-grow: 1;        
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
</style>

<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h3 class="mb-4">Search results for "<%= query %>"</h3>

  <div class="row">
    <% if (listings.length === 0) { %>
      <h4>No results found.</h4>
    <% } %>

    <% listings.forEach(listing => { %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <div class="card listing-card">

          <img src="<%= listing.image.url %>" class="listing-img">

          <div class="listing-body">
            <div>
              <h5><%= listing.title %></h5>
              <p class="text-muted"><%= listing.location %></p>
            </div>

            <a href="/listings/<%= listing._id %>" class="btn btn-danger mt-2">
              View
            </a>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</div>
